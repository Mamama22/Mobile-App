<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/treebg2"
    android:screenOrientation="landscape"
    tools:context=".LevelSelection">

    <Button
        android:id = "@+id/btn_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background = "@drawable/button_back"

        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id = "@+id/btn_leveltut"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background = "@drawable/level1"

        android:layout_marginTop="40dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/btn_back" />

    <Button
        android:id = "@+id/btn_level1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background = "@drawable/level2"

        android:layout_alignTop="@+id/btn_leveltut"
        android:layout_toEndOf="@+id/btn_leveltut"
        android:layout_marginStart="66dp" />

    <Button
        android:id = "@+id/btn_level2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background = "@drawable/level3"

        android:layout_alignTop="@+id/btn_level1"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="55dp"/>

    <Button
        android:id = "@+id/btn_lock"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background = "@drawable/levellock"

        android:layout_alignTop="@+id/btn_level2"
        android:layout_toStartOf="@+id/btn_lock2"
        android:layout_marginEnd="55dp" />

    <Button
        android:id = "@+id/btn_lock2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background = "@drawable/levellock"

        android:layout_marginEnd="55dp"
        android:layout_alignTop="@+id/btn_lock"
        android:layout_alignParentEnd="true" />

</RelativeLayout>